{
  "manifest_version": 3,
  "name": "Phantom Spotter",
  "version": "1.0",
  "description": "Summarizes the current page using OpenAI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
      "http://localhost:3020/*"
  ]
}
